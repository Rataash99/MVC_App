<% if(locals.lastVisit) { %>
    <div class="alert alert-primary" role="alert">
        You Last Visited : <%= locals.lastVisit %>
    </div>
<% } %>
<h1 class = "mb-4 mt-5 header">Products</h1>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col" class = "text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
    <tr>
      <th><%= product.id %></th>
      <td><%= product.name %></td>
      <td><%= product.desc %></td>
      <td scope="col"><%= product.price %></td>
      <td>
        <img class="w-25" src="<%= product.imageUrl %>" />
      </td>
      <td class = "text-center">
        <a href = '/update-product/<%= product.id %>' class="btn btn-warning">Update</a>
        <button onclick = "deleteProduct('<%= product.id %>')" class = "btn btn-danger" >Delete</button>
        <!-- <a href = '/delete-product/<%= product.id %>' class="btn btn-danger">Delete</a> -->
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
